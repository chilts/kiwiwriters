%# ----------------------------------------------------------------------------
<%once>
    my $menu = [
        {
            section => 'home',
            href => '/',
            text => 'Home',
        },
        {
            section => 'resources',
            href => '/resources/',
            text => 'Resources',
        },
        {
            section => 'news',
            href => '/news/site/',
            text => 'News',
        },
        {
            section => 'forum',
            href => '/my/forum/',
            text => 'Forums',
        },
    ];
    my $right = [
        {
            section => 'my',
            href => '/my/',
            text => 'My Pages',
        },
    ];
</%once>
%# ----------------------------------------------------------------------------
<div id="nav">
    <ul>
% foreach my $item ( @$menu ) {
        <li<% $m->request_comp->attr('section') eq $item->{section} ? ' id="current"' : '' %>><a href="<% $item->{href} %>"><% $item->{text} %></a></li>
% }
    </ul>
    <ul style="float: right;">
% foreach my $item ( @$right ) {
        <li<% $m->request_comp->attr('section') eq $item->{section} ? ' id="current"' : '' %>><a href="<% $item->{href} %>"><% $item->{text} %></a></li>
% }
    </ul>
    <p class="hide"><a href="#top">Back to top</a></p>
</div>
%# ----------------------------------------------------------------------------
