%# ----------------------------------------------------------------------------
<%once>
    my $menu = [
        {
            section => 'home',
            href => '/',
            text => 'Home',
        },
        {
            section => 'info',
            href => '/info/',
            text => 'Information',
        },
        {
            section => 'faq',
            href => '/faq/',
            text => 'FAQ',
        },
    ];
</%once>
%# ----------------------------------------------------------------------------
<div id="nav">
    <ul>
% foreach my $item ( @$menu ) {
        <li<% $m->request_comp->attr('section') eq $item->{section} ? ' id="current"' : '' %>><a href="<% $item->{href} %>"><% $item->{text} %></a></li>
% }
    </ul>
    <ul style="float: right;">
        <li <% $m->request_comp->attr('section') eq 'my' ? ' id="current"' : '' %>><a href="/my/">My Pages</a></li>
    </ul>
    <p class="hide"><a href="#top">Back to top</a></p>
</div>
%# ----------------------------------------------------------------------------
