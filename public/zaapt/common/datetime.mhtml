%# ----------------------------------------------------------------------------
<%args>
    $datetime
</%args>
%# ----------------------------------------------------------------------------
<%once>
    my $lut = {
        month => {
            '01' => 'Jan',
            '02' => 'Feb',
            '03' => 'Mar',
            '04' => 'Apr',
            '05' => 'May',
            '06' => 'Jun',
            '07' => 'Jul',
            '08' => 'Aug',
            '09' => 'Sep',
            '10' => 'Oct',
            '11' => 'Nov',
            '12' => 'Dec',
        },
    };
</%once>
%# ----------------------------------------------------------------------------
<%init>
    my ($year, $mon, $day, $hour, $min, $sec) = $datetime =~ m{ \A (\d{4})\-(\d{2})\-(\d{2}) \s (\d{2}):(\d{2}):(\d{2}) \z }xms;
</%init>
%# ----------------------------------------------------------------------------
<% $day | h %> <% $lut->{month}{$mon} | h %> <% $year | h %> <% $hour | h %>:<% $min | h %>:<% $sec | h %>\
%# ----------------------------------------------------------------------------
