%# ----------------------------------------------------------------------------
<%args>
    $t_name
    $content
</%args>
%# ----------------------------------------------------------------------------
<%once>
    use Text::Phliky;
    use BBCode::Parser;
</%once>
%# ----------------------------------------------------------------------------
<%init>
    my $phliky;
    if ( $t_name eq 'phliky' ) {
        $phliky = Text::Phliky->new({ mode => 'basic' });
    }
</%init>
%# ----------------------------------------------------------------------------
% if ( $t_name eq 'text' ) {
%     my @paras = split /\n\n+/, $content;
%     foreach my $para ( @paras ) {
<p><% $para | h %></p>
%     }
% } elsif ( $t_name eq 'html' ) {
    <% $content %>
% } elsif ( $t_name eq 'code' ) {
<pre>
<% $content %>
</pre>
% } elsif ( $t_name eq 'phliky' ) {
    <% $phliky->text2html( $content ) %>
% } elsif ( $t_name eq 'bbcode' ) {
%     my $tree = BBCode::Parser->DEFAULT->parse( $content );
    <% $tree->toHTML() %>
% } else {
    <p>Unknown content type: '<% $t_name | h %>'
% }
%# ----------------------------------------------------------------------------
