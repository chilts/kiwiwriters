%# ----------------------------------------------------------------------------
<%args>
    $events
</%args>
%# ----------------------------------------------------------------------------

% if ( @$events ) {
%     foreach my $event ( @$events ) {

<h2><% $event->{e_title} | h %></h2>

<p><% $event->{e_description} | h %></p>

<p>
    From <strong><& /zaapt/common/date.mhtml, date => $event->{e_startts} &></strong> until <strong><& /zaapt/common/date.mhtml, date => $event->{e_endts} &></strong>
</p>

<p><a href="<% $event->{e_name} | u %>.html">Read more...</a></p>

%     }
% } else {
<p>No challenges found.</p>
% }

%# ----------------------------------------------------------------------------
