%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $id
    $page
</%args>
%# ----------------------------------------------------------------------------
<%init>
    if ( $page eq '' ) {
        $m->clear_buffer();
        $m->abort(404);
        return;
    }

    if ( $page eq 'index' ) {
        # main index page
        $m->comp('/zaapt/model/profile/view-index.mhtml',
            zaapt      => $zaapt,
            id         => $id,
        );
    }
    else {
        $m->clear_buffer();
        $m->abort(404);
        return;
    }
    return;
</%init>
%# ----------------------------------------------------------------------------
